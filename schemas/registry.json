{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "A shadcn registry of components, hooks, pages, etc.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "homepage": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/nrjdalal/smart-registry/refs/heads/main/schemas/item.json"
      }
    }
  },
  "required": ["name", "homepage", "items"],
  "uniqueItems": true,
  "minItems": 1
}
